<layers>
<visual>

  <param name="rotation_angle" type="anim">
    <duration>0.5</duration>
    <style>outquad</style>
    <keyframe at="0">0</keyframe>
    <keyframe at="1">90</keyframe>
  </param>
  
  <param name="rotation_origin_x" ref="visual.width">0.5</param>
  <param name="rotation_origin_y" ref="visual.height">0.5</param>
  
  <param name="rotation_axis_x" type="anim">0</param>
  <param name="rotation_axis_y" type="anim">1</param>
  <param name="rotation_axis_z" type="anim">0</param>
  
    <param name="scale_x" type="anim">
      <duration>0.5</duration>
      <style>outquad</style>
        <keyframe at="0">0</keyframe>
        <keyframe at="1">1</keyframe>
      <start ref="visual.width">1</start>
      <end ref="visual.width">0.8</end>    
  </param>
  
  <param name="scale_y" type="anim">
      <duration>0.5</duration>
      <style>outquad</style>
        <keyframe at="0">0</keyframe>
        <keyframe at="1">1</keyframe>
      <start ref="visual.height">1</start>
      <end ref="visual.height">0.8</end>    
  </param>
  
  <param name="scale_origin_x" ref="visual.width">0.5</param>
  <param name="scale_origin_y" ref="visual.height">0.5</param>
    
    <param name="opacity" type="anim">
        <duration>0.5</duration>
        <style>outquad</style>
        <keyframe at="0">1</keyframe>
        <keyframe at="1">0.2</keyframe>
    </param>

</visual>
</layers>
